<%- include layouts/header.ejs %>
<title>AlkoSzop - Panel Administracyjny</title>
<div class="page-data">
    <div class="data-btn">
        <button onClick="addProducent();">+ Dodaj</button>
        <p></p>
    </div>
    <div class="data-table">
        <table border="1" cellpadding="7" cellspacing="7">
            <tr>
                <th width="100px">ID Producenta</th>
                <th>Nazwa</th>
                <th width="120px">Akcja</th>
            </tr>

            <% if(data.length){

            for(var i = 0;i < data.length;i++) { %>

            <tr>
                <td><%= data[i].ID_Producent %></td>
                <td><%= data[i].nazwa %></td>
                <td>
                    <a class="a-inside edit" href="../producenci/edit/<%= data[i].ID_Producent %>">Edytuj</a>

                    <a class="a-inside delete" href="../producenci/delete/<%= data[i].ID_Producent %>">Usuń</a>
                </td>
            </tr>
            <% }

            }else{ %>
            <tr>
                <td colspan="3">Brak Producentów</td>
            </tr>
            <% } %>

        </table>
    </div>
</div>

<%- include layouts/footer.ejs %>
